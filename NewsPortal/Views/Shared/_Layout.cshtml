<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsPortal</title>

    <environment include="Development">
        @*Bootstrap Include*@
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        
        @*Gallery Include*@
        <link rel="stylesheet" href="~/lib/lightbox2/css/lightbox.css"/>

        @*FontAwesome Include*@
        <link rel="stylesheet" href="~/lib/font-awesome/dist/css/font-awesome.css" />

        @*Site Include*@
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        @*Bootstrap Include*@
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


        @*Gallery Include*@
        <link rel="stylesheet" href="~/lib/lightbox2/css/lightbox.min.css" />

        @*FontAwesome Include*@
        <link rel="stylesheet" href="~/lib/font-awesome/dist/css/font-awesome.min.css" />

        @*FontAwesome Include*@

        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="container shadow p-3 bg-white rounded">

        <nav class="navbar navbar-expand-lg navbar-dark mb-3">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="fa fa-newspaper-o" aria-hidden="true"></i> News Portal</a>
            <button class="navbar-toggler" type="button" data-target="#navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Index</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Articles" asp-action="Archive" class="nav-link">Archive</a>
                    </li>

                    @* Admin *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navdrop" role="button" data-toggle="dropdown" data-hover="dropdown">Admin</a>
                        <div class="dropdown-menu" aria-labelledby="navdrop">
                            <a asp-area="" asp-controller="Articles" asp-action="Index" class="dropdown-item">Articles</a>
                            <a asp-area="" asp-controller="Users" asp-action="Index" class="dropdown-item">Users</a>
                            <a asp-area="" asp-controller="Pictures" asp-action="Index" class="dropdown-item">Pictures</a>
                        </div>
                    </li>


                </ul>
            </div>
        </nav>

        @*<partial name="_CookieConsentPartial" />*@
        <div class="body-content">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; 2018 - News Portal</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/lightbox2/js/lightbox-plus-jquery.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/lightbox2/js/lightbox-plus-jquery.min.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
