@model IEnumerable<NewsPortal.Models.Entiy.Picture>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LargeImageData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SmallImageData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Action("GetImage", "Manager", new { id = item.Id, isLarge = true })">
                </td>
                <td>
                    <img src="@Url.Action("GetImage", "Manager", new { id = item.Id, isLarge = false })">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Article.Summary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
